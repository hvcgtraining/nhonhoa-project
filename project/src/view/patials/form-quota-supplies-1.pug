.form-quota-supplies
    .panel.panel-default
        .panel-heading
            h6.panel-title
                i.icon-grid
                |  Tạo định mức vật tư
        .panel-body

                .form-group.col-sm-12
                    .form-group.col-sm-4.mg-t1.mg-b1
                        label.control-label Ngày lập: 
                        input.form-control(type='date', name="date")
                    .form-group.col-sm-4.mg-t1.mg-b1        
                        label.control-label Mã cấp phát: 
                        input.form-control(type='text', placeholder='Z3KX35-407-QT')
                    .form-group.col-sm-4.mg-t1.mg-b1
                        label.control-label Mã định mức: 
                        input.form-control(type='text', placeholder='Z3KX35-407-QT') 
                .form-group.col-sm-12
                    .form-group.col-sm-4.mg-t1.mg-b1
                        label.control-label Mã Phân Loại: 
                        select.form-control(name='select')
                            option(value='opt1') Option
                            option(value='opt2') Option 2
                            option(value='opt3') Option 3
                            option(value='opt4') Option 4
                            option(value='opt5') Option 5
                            option(value='opt6') Option 6
                            option(value='opt7') Option 7
                            option(value='opt8') Option 8
                    .form-group.col-sm-8.mg-t1.mg-b1
                        label.control-label  Chi tiết   
                        input.form-control(type='text', placeholder='NHGS 8kg/8"1F/Jorodan/C')
                .form-group.col-sm-12
                    .form-group.col-sm-12.mg-t1.mg-b1.mg-b1
                        label Diễn giải:
                        input.form-control(rows='8', cols='5')
    .form-actions.text-right
        button.btn.btn-primary(type='submit') Kế tiếp


            
