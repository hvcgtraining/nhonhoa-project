.panel.panel-default(style="margin-bottom:15px")
    .panel-heading
        h6.panel-title Thêm/Sửa
        .pull-right
            a.btn.btn-link.btn-icon(href='panel_options.html#')
                i.icon-wrench
    .panel-body
        .form-group
            label.control-label.col-sm-12 Tìm kiếm: 
            .form-group
                .col-sm-5
                    select.form-control(name='select')
                        option(value='opt1') Option
                        option(value='opt2') Option 2
                        option(value='opt3') Option 3
                        option(value='opt4') Option 4
                        option(value='opt5') Option 5
                        option(value='opt6') Option 6
                        option(value='opt7') Option 7
                        option(value='opt8') Option 8
                .col-sm-7
                    input.form-control(type='text', placeholder='bộ cột kim - BR 1-2-5 hợp kim')
        .form-group.col-sm-12.mg-t1.mg-b1
            label Đơn vị tính:
            input.form-control(type='text',placeholder="Bộ")
        .form-group.col-sm-12.mg-t1.mg-b1
            label Ghi chú:
            textarea.form-control(rows='8', cols='5')
.form-actions.text-right
    button.btn.btn-primary(type='submit') Thêm
