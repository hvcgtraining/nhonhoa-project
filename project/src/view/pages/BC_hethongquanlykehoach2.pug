extends ../layouts/layout.pug
block main-content
    .page-container
        include ../patials/sidebar.pug
        .page-content
            .row.mg-t3 
                .col-sm-8
                    .panel.panel-default(style="margin-bottom:15px")
                        .panel-heading
                            h6.panel-title
                                |  Hệ thống quản lý kế hoạch
                        .panel-body
                            .row
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        label.control-label Từ ngày: 
                                        input.form-control(type='date', name="date")
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        label.control-label Đến ngày:
                                        input.form-control(type='date', name="date")
                            .row
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        label.control-label Ngày báo cáo: 
                                        input.form-control(type='date', name="date")
            .row.mg-t3
                .col-sm-12
                    .panel.panel-default(style="margin-bottom:15px")
                        .panel-heading
                            h6.panel-title
                                |  Xem bảng cân đối thời gian sử dụng
                        .panel-body
                            .row
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        input(type="radio", name="radio", value="12", checked)
                                        span.label-radio
                                            label Xem bảng cân đối tất cả các kho
                                    .form-group.mg-t1.mg-b1
                                        input(type="radio", name="radio", value="12")
                                        span.label-radio
                                            label Chọn xem bảng cân đối theo kho
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        input(type="radio", name="radio2", value="12", checked)
                                        span.label-radio
                                            label Bảng tổng hợp
                                    .form-group
                                        .block-inner.mg-t1
                                            .checker
                                                span
                                                    input.styled(type='checkbox')
                                            label.checkbox-inline.mg-r3 Rút gọn
                            .row
                                .col-sm-6
                                    .form-group.mg-t1.mg-b1
                                        input(type="radio", name="radios", value="12", checked)
                                        span.label-radio
                                            label Chọn xem bảng cân đối điều chuyển
                            .row
                                .form-group.col-sm-6.mg-t1.mg-b1
                                        label.control-label.col-sm-12.pd-0 Mã sản phẩm: 
                                        .form-group.mg-t1.mg-b1
                                            .row
                                                .col-sm-4
                                                    select.form-control(name='select')
                                                        option(value='opt1') N1B0
                                                        option(value='opt2') N1B0
                                                        option(value='opt3') N1B0
                                                        option(value='opt4') N1B0
                                                .col-sm-8
                                                    input.form-control(type='text', placeholder='Thùng giấy cân 10kg/8*/CDC')
            .form-actions.text-center.mg-b1.mg-t3
                button.btn.btn-primary.btn-defaults.mg-r3(type='submit') Excel
                button.btn.btn-primary.btn-defaults.mg-r3(type='submit') Đồng ý
                button.btn.btn-primary.btn-defaults.mg-r3(type='submit') Thoát
